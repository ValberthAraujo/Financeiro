<RootWidget>:
    Video:
        source: './assets/videos/fundo_login.mp4'
        options: {'eos': 'loop'}
        state: 'play'
        volume: 0
        allow_stretch: True
        keep_ratio: False
        size_hint: 1, 1
        pos: self.pos

    # Bot√£o centralizado
    Button:
        id: 'escolher_arquivo'
        size_hint: None, None
        size: 200, 50
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_press: root.selecionar_arquivo()
        background_normal: ''
        canvas:
            Color:
                rgba: 0.98046875, 0.9140625, 0.99609375, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        text: "Escolher Arquivo"
        color: 0,0,0,1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
